<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customerInfoId"
    android:background="#FFFFFF"
    app:cardCornerRadius="6dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="4dp">

        <!--Textview for displaying our Course Name-->


        <!--Textview for displaying our Course Duration-->
<!--        <TextView-->
<!--            android:id="@+id/customer_id"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="2dp"-->
<!--            android:text="Customer Id"-->
<!--            android:textColor="@color/black" />-->

        <!--Textview for displaying our Course Description-->
        <TextView
            android:id="@+id/customer_name"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="18sp"
            android:text="Customer Name"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/customer_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Customer Number"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/customer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Customer Address"
            android:textColor="#000"

             />

        <TextView
            android:id="@+id/interestedId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Interested"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/latitudeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="latitude"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/longitudeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="longitude"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>